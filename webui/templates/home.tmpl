

  <div class="container-fluid">
  
    <!-- vm by region pie chart -->
    <div class="row">
      <div class="col-md border p-3">
        Total VMs: <p class="text-center fw-bold fs-2">{{ .TotalVMs }}</p>
      </div>
      <div class="col-md border p-3">
        <canvas id="regionChart"></canvas>
        <script>
    
        var xValues = [
        {{ range $region, $vmsum := .SumVmByRegion }}
          "{{ $region }}",
        {{ end }}
        ];
    
        var yValues = [
        {{ range $region, $vmsum := .SumVmByRegion }}
          {{ $vmsum }},
        {{ end }}
        ];
    
        var barColors = [
          "#b91d47",
          "#00aba9",
          "#2b5797",
          "#e8c3b9",
          "#1e7145"
        ];
    
        new Chart("regionChart", {
          type: "pie",
          data: {
            labels: xValues,
            datasets: [{
              backgroundColor: barColors,
              data: yValues
            }]
          },
          options: {
            title: {
              display: true,
              text: "servers per region"
            }
          }
        });
        </script>
      </div>
    
    <!-- vm by type bar chart -->
      <div class="col-md border p-3" >
        <canvas id="instanceTypeChart" style="height: 400px; width: 400;"></canvas>
    
        <script>
        var xaccounts = [
        {{ range $instanceType, $sum := .SumVmByType }}
          "{{ $instanceType }}",
        {{ end }}
        ];
        var yacccount = [
        {{ range $instanceType, $sum := .SumVmByType }}
          {{ $sum }},
        {{ end }}
        ];
        var barColors = ["red", "green","blue","orange","brown"];
        
        new Chart("instanceTypeChart", {
          type: "bar",
          data: {
            labels: xaccounts,
            datasets: [{
              label: "VMs by type",
              backgroundColor: barColors,
              data: yValues
            }]
          },
          options: {
            legend: {display: false},
            title: {
              display: true,
              text: "Instance types"
            },
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });
        </script>
      </div>
    
    <!-- vm by Account bar chart -->
      <div class="col-md border p-3">
        <canvas id="AccountChart" style="height: 400px; width: 400;"></canvas>
    
        <script>
        var xaccounts = [
        {{ range $account, $sum := .SumVmByAccount }}
          "{{ $account }}",
        {{ end }}
        ];
        var yacccount = [
        {{ range $account, $sum := .SumVmByAccount }}
          {{ $sum }},
        {{ end }}
        ];
        var barColors = ["red", "green","blue","orange","brown"];
        
        new Chart("AccountChart", {
          type: "bar",
          data: {
            labels: xaccounts,
            datasets: [{
              label: "VMs by AWS accounts",
              backgroundColor: barColors,
              data: yValues
            }]
          },
          options: {
            legend: {display: false},
            title: {
              display: true,
              text: "AWS accounts"
            },
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });
        </script>
      </div>
    </div>
  </div>



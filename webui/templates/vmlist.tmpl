<table class="table table-hover" id="vmlist-table">
<thead>
  <tr>
    <th></th>
    <th>Region</th>
    <th>AwsAccountId</th>
    <th>InstanceId</th>
	  <th>Name</th>
	  <th>Architecture</th>
	  <th>PlatformDetails</th> 
	  <th>InstanceType</th>
	  <th>State</th>       
  </tr>
</thead>
<tbody>
  {{ range $accountId, $data := .AwsAccounts }}
    {{ range $region, $data := .AwsRegions }}   
      {{range $instanceId, $data := .VirtualMachines }}
      <tr>
        <td>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="flexRadio" id="flexRadioDefault{{ $instanceId }}"
            hx-get="/vmdetails/{{ $accountId }}/{{ $region }}/{{ $instanceId }}" 
            hx-trigger="click" hx-target="#vmdetails" hx-swap="innerHTML">
          </div>
        </td>
        <td>{{$region}}</td>
        <td>{{$accountId}}</td>
        <td>{{ $instanceId }}</td>
	      <td></td>
	      <td>{{.Architecture}}</td>
	      <td>{{.PlatformDetails}}</td>  
	      <td>{{.InstanceType}}</td>
	      <td>{{.State}}</td>
      </tr>
      {{end}}
    {{end}}
  {{end}}
</tbody>
</table>
<script>
$('#vmlist-table').DataTable();
</script>

<div id=vmdetails class="border border-secondary text-bg-light d-flex dropdown" >
</div>